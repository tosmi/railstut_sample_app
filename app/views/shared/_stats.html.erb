<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat"></strong>
    <%= @user.following.count %>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat"></strong>
    <%= @user.followers.count %>
    followers
  </a>
</div>
